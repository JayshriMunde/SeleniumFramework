<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" >
    <groups>
        <run>
            <include name="ErrorHandling"/>
        </run>
    </groups>
    <listeners>
        <listener class-name="ECOM.TestComponents.Listeners"/>
    </listeners>

    <test verbose="2" preserve-order="true" name="Submit Order">
        <classes>
            <class name="EcomTest.ErrorValidation"/>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="ErrorValidation">
        <classes>
            <class name="EcomTest.StandaloneECOMtest"/>
        </classes>
    </test>
</suite>